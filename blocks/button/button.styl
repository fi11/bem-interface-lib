.button
    font-family: $FONT
    position: relative
    display: inline-block
    margin: 0
    padding: 0
    user-select: none
    color: #000
    background: #fff
    border: 1px solid #c1c1c1
    outline: 0
    text-align: center
    white-space: nowrap

    &::-moz-focus-inner
        padding: 0
        border: 0

    .button__text
        overflow: hidden
        text-overflow: ellipsis
        vertical-align: top
